@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.KargoTakip>
@{
    ViewBag.Title = "KargoDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Kargo Detayı</h2>

<div class="card-body">
    <div class="table-responsive">
        @*<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">*@
        <table class="table table-striped" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Açıklama</th>
                    <th>Tarih</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Açıklama</th>
                    <th>Tarih</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.Aciklama</td>
                        <td>@item.TarihZaman.ToString("dd-MM-yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Cari/CariEkle/" class="btn btn-primary">Yeni Cari Ekle</a>
    </div>
</div>