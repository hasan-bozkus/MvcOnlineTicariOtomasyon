@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Satış Yap</h2>
<div class="card-body">
    <div class="form-responsive">
        <form class="form-group" method="post">
            @Html.LabelFor(x => x.UrunID)
            <input type="text" name="UrunID" value="@ViewBag.id" class="form-control" readonly />
            <br />
            @Html.LabelFor(x => x.PersonelID)
            @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.personel, "Lütefen Personel Seçin", new { @class = "form-control", placeholder = "Personel Girin" })
            <br />
            @Html.LabelFor(x => x.CariID)
            @Html.TextBoxFor(x => x.CariID, new { @class = "form-control" })
            <br />
            @Html.LabelFor(x => x.Adet)
            <input type="number" name="Adet" id="adet" onkeyup="sum();" class="form-control" max="10" min="0" placeholder="0" />
            <br />
            @Html.LabelFor(x => x.Fiyat)
            <input type="text" id="fiyat" onkeyup="sum();" name="Fiyat" value="@ViewBag.fiyat" class="form-control" />
            <br />
            @Html.LabelFor(x => x.ToplamTutar)
            <input type="text" name="ToplamTutar" id="toplamTutar" value="0" class="form-control" readonly />
            <br />
            @*Tarihi arkadan al*@
            <button class="btn btn-info">Satış Yap</button>
        </form>
    </div>
</div>


<script>
    function sum() {
        var adet = document.getElementById('adet').value;
        var fiyat = document.getElementById('fiyat').value;
        var sonuc = parseInt(adet) * parseInt(fiyat);
        if (!isNaN(sonuc)) {
            document.getElementById('toplamTutar').value = sonuc;
        }
    }
</script>

