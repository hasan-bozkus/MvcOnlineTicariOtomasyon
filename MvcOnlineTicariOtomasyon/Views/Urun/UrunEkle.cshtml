@model MvcOnlineTicariOtomasyon.Models.Siniflar.Urun
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Ürün Ekle</h2>

<div class="card-body">
    <div class="form-responsive">
        <form class="form-group" method="post">
            @Html.LabelFor(x => x.UrunAd)
            @Html.TextBoxFor(x => x.UrunAd, new { @class = "form-control", placeholder = "Ürün Adını Girin" })
            <br />
            @Html.LabelFor(x => x.Marka)
            @Html.TextBoxFor(x => x.Marka, new { @class = "form-control", placeholder = "Ürün Markasını Girin" })
            <br />
            @Html.LabelFor(x => x.Stok)
            @Html.TextBoxFor(x => x.Stok, new { @class = "form-control", placeholder = "Ürün Stoğunu Girin" })
            <br />
            @Html.LabelFor(x => x.AlisFiyat)
            @Html.TextBoxFor(x => x.AlisFiyat, new { @class = "form-control", placeholder = "Ürün Alış Fiyatını Girin" })
            <br />
            @Html.LabelFor(x => x.SatisFiyat)
            @Html.TextBoxFor(x => x.SatisFiyat, new { @class = "form-control", placeholder = "Ürün Satış Fiyatını Girin" })
            <br />
            @Html.LabelFor(x => x.KategoriID)
            @Html.DropDownListFor(x => x.KategoriID, (List<SelectListItem>)ViewBag.kategori, "Lütefen Kategori Seçin", new { @class = "form-control", placeholder = "Ürün Kategorisini Girin" })
            <br />
            @Html.LabelFor(x => x.UrunGorsel)
            @Html.TextBoxFor(x => x.UrunGorsel, new { @class = "form-control", placeholder = "Ürün Görselini Girin" })
            <br />
            <button class="btn btn-info">Kaydet</button>
        </form>
    </div>
</div>


