@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "CariEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Cari Ekle</h2>

<div class="card-body">
    <div class="form-responsive">
        <form class="form-group" method="post">
            @Html.LabelFor(x => x.CariAd)
            @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control", placeholder = "Cari Adını Girin" })
            <br />
            @Html.LabelFor(x => x.CariSoyad)
            @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control", placeholder = "Cari Soyadını Girin" })
            <br />
            @Html.LabelFor(x => x.CariSehir)
            @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control", placeholder = "Cari Şehrini Girin" })
            <br />
            @Html.LabelFor(x => x.CariMail)
            @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control", placeholder = "Cari E-Postasını Girin" })
            <br />
            <button class="btn btn-info">Kaydet</button>
        </form>
    </div>
</div>


