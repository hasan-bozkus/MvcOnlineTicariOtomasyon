@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<h2>Satış İşlemi Güncelleme</h2>

<br />
@using (Html.BeginForm("SatisGuncelle", "Satis", FormMethod.Post))
{

    <div class="form-group">

        @Html.HiddenFor(x => x.SatisID)

        @Html.LabelFor(x => x.Urun)
        @Html.DropDownListFor(x => x.UrunID, (List<SelectListItem>)ViewBag.urun, "Lütfen Ürün Seçin", new { @class = "form-control", placeholder = "Ürün Girin" })
        <br />

        @Html.Label("Cari")
        @Html.DropDownListFor(x => x.CariID, (List<SelectListItem>)ViewBag.cari, "Lütfen Cari Seçin", new { @class = "form-control", placeholder = "Cari Girin" })
        <br />

        @Html.LabelFor(x => x.Personel)
        @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.personel, "Lütfen Personel Seçin", new { @class = "form-control", placeholder = "Personel Girin" })
        <br />

        @Html.LabelFor(x => x.Adet)
        @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
        <br />

        @Html.LabelFor(x => x.Fiyat)
        @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
        <br />

        @Html.LabelFor(x => x.ToplamTutar)
        @Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control" })
        <br />

    </div>
    <button class="btn btn-warning">Güncelle</button>
}


