@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int count = 0;
}

<br />
<div class="card-body">
    <div class="table-responsive">
        @*<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">*@
        <table id="tbl1" class="table table-bordered" width="100%" style="margin-top:20px" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ürün</th>
                    <th>Cari</th>
                    <th>Personel</th>
                    <th>Adet</th>
                    <th>Fiyat</th>
                    <th>Toplam</th>
                    <th>Tarih</th>
                    <th>Güncelle</th>
                    <th>Detay</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Ürün</th>
                    <th>Cari</th>
                    <th>Personel</th>
                    <th>Adet</th>
                    <th>Fiyat</th>
                    <th>Toplam</th>
                    <th>Tarih</th>
                    <th>Güncelle</th>
                    <th>Detay</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;

                    <tr>
                        <td>@count</td>
                        <td>@item.Urun.UrunAd</td>
                        <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
                        <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                        <td>@item.Adet</td>
                        <td>@item.Fiyat</td>
                        <td>@item.ToplamTutar</td>
                        <td>@(((DateTime)item.Tarih).ToString("dd-MMM-yyyy"))</td>
                        <td><a href="/Satis/SatisGetir/@item.SatisID" class="btn btn-outline-danger">Güncelle</a></td>
                        <td><a href="/Satis/SatisDetay/@item.SatisID" class="btn btn-outline-success">Detayı Gör</a></td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Satis/YeniSatis/" class="btn btn-primary">Yeni Satış Yap</a>
    </div>
</div>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
