@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.KargoDetay>
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />

@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <p>
        Kargo Takip No: @Html.TextBox("query")
        <input type="submit" value="Ara" />
    </p>
}


<div class="card-body">
    <div class="table-responsive">
        @*<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">*@
        <table class="table table-bordered" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Takip Kodu</th>
                    <th>Personel</th>
                    <th>Alıcı</th>
                    <th>Tarih</th>
                    <th>Detay</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.TakipKodu</td>
                        <td>@item.Personel</td>
                        <td>@item.Alici</td>
                        <td>@item.Tarih.ToString("dd-MM-yyyy")</td>
                        <td><a href="/CariPanel/CariKargoTakip/@item.TakipKodu" class="btn btn-outline-success">Detaylar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
