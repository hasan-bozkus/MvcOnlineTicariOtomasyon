@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int count = 0;
}

<br />
<h2>Departman Personel Satış Sayfası</h2>

<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.departmanPersonel</li>
</ol>

<div class="card-body">
    <div class="table-responsive">
        @*<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">*@
        <table class="table table-condensed" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ürün</th>
                    <th>Cari</th>
                    <th>Fiyat</th>
                    <th>Adet</th>
                    <th>Toplam</th>
                    <th>Tarih</th>
                    <th>Yazdır</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Ürün</th>
                    <th>Cari</th>
                    <th>Fiyat</th>
                    <th>Adet</th>
                    <th>Toplam</th>
                    <th>Tarih</th>
                    <th>Yazdır</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;

                    <tr>
                        <td>@count</td>
                        <td>@item.Urun.UrunAd</td>
                        <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
                        <td>@item.Fiyat</td>
                        <td>@item.Adet</td>
                        <td>@item.ToplamTutar</td>
                        <td>@(((DateTime)item.Tarih).ToString("dd-MMM-yyyy"))</td>
                        <td><a href="#" class="btn btn-primary">Yazdır</a></td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Departman/DepartmanEkle/" class="btn btn-primary">Yeni Departman Ekle</a>
    </div>
</div>
