@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int count = 0;
}

<br />
<div class="card-body">
    <div class="table-responsive">
        @*<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">*@
        <table class="table table-bordered" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Departman Adı</th>
                    <th>Durum</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Detay</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Departman Adı</th>
                    <th>Durum</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Detay</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;

                    <tr>
                        <td>@count</td>
                        <td>@item.DepartmanAd</td>
                        <td>@item.Durum</td>
                        <td><a href="/Departman/DepartmanSil/@item.DepartmanID" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Departman/DepartmanGetir/@item.DepartmanID" class="btn btn-warning">Güncelle</a></td>
                        <td><a href="/Departman/DepartmanDetay/@item.DepartmanID" class="btn btn-success">Detayı Gör</a></td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Departman/DepartmanEkle/" class="btn btn-primary">Yeni Departman Ekle</a>
    </div>
</div>

