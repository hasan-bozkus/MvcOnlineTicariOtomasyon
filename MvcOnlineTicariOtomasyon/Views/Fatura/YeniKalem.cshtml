@model MvcOnlineTicariOtomasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "YeniKalem";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<br />
<h2>Yeni Kalem Girişi</h2>

<div class="card-body">
    <div class="form-responsive">
        <form class="form-group" method="post">
            @Html.LabelFor(x => x.Aciklama)
            @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control", placeholder = "Seri No Girin" })
            <br />
            @Html.LabelFor(x => x.Miktar)
            @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control", placeholder = "Sıra No Girin" })
            <br />
            @Html.LabelFor(x => x.BirimFiyat)
            @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control", placeholder = "Vergi Dairesi Girin" })
            <br />
            @Html.LabelFor(x => x.Tutar)
            @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control", placeholder = "Teslim Eden Girin" })
            <br />
            @Html.LabelFor(x => x.Faturalar)
            @Html.TextBoxFor(x => x.FaturaID, new { @class = "form-control", placeholder = "Teslim Alan Girin" })
            <br />
            <button class="btn btn-info">Kaydet</button>
        </form>
    </div>
</div>


