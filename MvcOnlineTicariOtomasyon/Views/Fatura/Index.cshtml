@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int count = 0;
}

<br />
<div class="card-body">
    <div class="table-responsive">
        @*<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">*@
        <table class="table table-bordered" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Seri Sıra No</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Toplam</th>
                    <th>Güncelle</th>
                    <th>Detaylar</th>
                    <th>Yeni Kalem</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Seri Sıra No</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Toplam</th>
                    <th>Güncelle</th>
                    <th>Detaylar</th>
                    <th>Yeni Kalem</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;

                    <tr>
                        <td>@item.FaturaSeriNo @item.FaturaSıraNo</td>
                        <td>@(((DateTime)item.Tarih).ToString("dd-MM-yyyy"))</td>
                        <td>@item.Saat</td>
                        <td>@item.Toplam ₺</td>
                        <td><a href="/Fatura/FaturaGetir/@item.FaturaID" class="btn btn-outline-warning">Güncelle</a></td>
                        <td><a href="/Fatura/FaturaDetay/@item.FaturaID" class="btn btn-outline-info">Detayı Gör</a></td>
                        <td><a href="/Fatura/FaturaDetay/@item.FaturaID" class="btn btn-outline-danger">Kalem</a></td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Fatura/FaturaEkle/" class="btn btn-primary">Yeni Fatura Girişi</a>

        <br />
        <br />
        <button type="button" class="btn btn-warning" style="background-color:#d95151; color:white;" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

    </div>
</div>


<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Dialog Ekranı</h2>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <td>Seri No</td>
                            <td>Sıra No</td>
                            <td>Tutar</td>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FaturaSeriNo</td>
                                <td>@item.FaturaSıraNo</td>
                                <td>@item.Toplam ₺</td>
                            </tr>
                        }
                    </table>
                </div>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>

