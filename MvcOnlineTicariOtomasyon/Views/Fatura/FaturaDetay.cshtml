@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int count = 0;
}

<br />
<h2>Fatura Detay Sayası</h2>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.departman</li>
</ol>

<br />

<div class="card-body">
    <div class="table-responsive">
        @*<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">*@
        <table class="table table-hover" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Görsel</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Görsel</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;

                    <tr>
                        <td>@count</td>
                        <td>@item.Aciklama</td>
                        <td>@item.Miktar</td>
                        <td>@item.BirimFiyat</td>
                        <td>@item.Tutar</td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Fatura/YeniKalem/" class="btn btn-primary">Yeni Kalem Girişi</a>
    </div>
</div>


