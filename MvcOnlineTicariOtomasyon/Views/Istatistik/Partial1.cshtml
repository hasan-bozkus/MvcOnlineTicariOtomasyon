@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGroup2>
@{ 
    int number = 0;
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Task</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    number++;
                    <tr>
                        <td>@number</td>
                        <td>@item.Departman</td>
                        <td>
                            @if (item.Sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: @item.Sayi%"></div>
                                </div>
                            }
                            @if (item.Sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: @item.Sayi%"></div>
                                </div>
                            }
                            @if (item.Sayi == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: @item.Sayi%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (item.Sayi == 1)
                            {
                                <span class="badge bg-primary">@item.Sayi%</span>
                            }
                            @if (item.Sayi == 2)
                            {
                                <span class="badge bg-warning">@item.Sayi%</span>
                            }
                            @if (item.Sayi == 3)
                            {
                                <span class="badge bg-success">@item.Sayi%</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
