@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGroup3>

@{
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;

                    <tr>
                        <td>@count</td>
                        <td>@item.Marka</td>
                        <td>
                            @if (item.Sayi >= 1 && item.Sayi <= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: @item.Sayi%"></div>
                                </div>
                            }
                            @if (item.Sayi >= 4 && item.Sayi <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: @item.Sayi%"></div>
                                </div>
                            }
                            @if (item.Sayi >= 7)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: @item.Sayi%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (item.Sayi >= 1 && item.Sayi <= 3)
                            {
                                <span class="badge bg-primary">@item.Sayi%</span>
                            }
                            @if (item.Sayi >= 4 && item.Sayi <= 6)
                            {
                                <span class="badge bg-warning">@item.Sayi%</span>
                            }
                            @if (item.Sayi >= 7)
                            {
                                <span class="badge bg-success">@item.Sayi%</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
