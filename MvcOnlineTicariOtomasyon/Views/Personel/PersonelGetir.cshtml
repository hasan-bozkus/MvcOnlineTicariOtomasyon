@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<h2>Personel Güncelleme</h2>
<br />
@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{

    <div class="form-group">

        @Html.HiddenFor(x => x.PersonelID)

        @Html.LabelFor(x => x.PersonelAd)
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control", placeholder = "Cari Adını Girin" })
        <br />
        @Html.LabelFor(x => x.PersonelSoyad)
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control", placeholder = "Cari Soyadını Girin" })
        <br />
        @Html.LabelFor(x => x.PersonelGorsel)
        @Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control", placeholder = "Cari Şehrini Girin" })
        <br />
        @Html.LabelFor(x => x.Departman)
        @Html.DropDownListFor(x => x.DepartmanID, (List<SelectListItem>)ViewBag.departman, "Lütefen Departman Seçin", new { @class = "form-control", placeholder = "Departman Girin" })       
        <br />
        </div>
        <button class="btn btn-info">Güncelle</button>
        }

